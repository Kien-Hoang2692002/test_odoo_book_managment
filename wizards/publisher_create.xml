<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_publisher_transient_form" model="ir.ui.view">
        <field name="name">publisher.transient.form</field>
        <field name="model">publishertransient</field>
        <field name="arch" type="xml">
            <form string="Create Publisher">
                <group>
                    <field name="name"/>
                </group>
                <footer>
                    <button string="Edit" type="object" name="edit_publisher" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_publisher_transient" model="ir.actions.act_window">
        <field name="name">Edit Publisher</field>
        <field name="res_model">publishertransient</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
