<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_book_rental" model="ir.actions.report">
        <field name="name">Print Rental Book 3</field>
        <field name="model">book.rental</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">book_managment.report_book_rental_template</field>
        <field name="report_file">book_managment.report_book_rental_template</field>
        <field name="binding_model_id" ref="model_book_rental"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_book_rental_template">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="text-center">
                    <h1 style="font-size: 28px; margin-top: 10px;">Book Rental Report</h1>
                    <p style="font-size: 14px; color: #888;">Summary of rentals and returns</p>
                </div>
                <!-- Table of Rentals -->
                <table class="table table-bordered table-hover" style="margin-top: 30px; font-size: 14px;">
                    <thead style="background-color: #f5f5f5; text-align: center;">
                        <tr>
                            <th style="padding: 10px;">Book Name</th>
                            <th style="padding: 10px;">Customer Name</th>
                            <th style="padding: 10px;">Rental Date</th>
                            <th style="padding: 10px;">Return Date</th>
                            <th style="padding: 10px;">Total Rantel Price</th>
                            <th style="padding: 10px;">Payment Due</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td style="padding: 10px; text-align: left;">
                                    <t t-esc="doc.book_id.name"/>
                                </td>
                                <td style="padding: 10px; text-align: left;">
                                    <t t-esc="doc.customer_id.name"/>
                                </td>
                                <td style="padding: 10px; text-align: center;">
                                    <t t-esc="doc.rental_date"/>
                                </td>
                                <td style="padding: 10px; text-align: center;">
                                    <t t-esc="doc.return_date"/>
                                </td>
                                <td style="padding: 10px; text-align: center;">
                                    <t t-esc="doc.total_rental_price"/>
                                </td>
                                 <td style="padding: 10px; text-align: center;">
                                    3 days
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div class="footer" style="margin-top: 40px; text-align: center; font-size: 12px; color: #888;">
                    <p>Generated by: <strong>Library Management System</strong></p>
                    <p>Date: <t t-esc="time.strftime('%Y-%m-%d')"/></p>
                </div>
            </div>
        </t>
    </t>
</template>
</odoo>
